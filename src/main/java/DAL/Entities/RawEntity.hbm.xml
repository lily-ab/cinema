<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="DAL.Entities.RawEntity" table="raw" schema="cinemadb">
        <id name="idraw">
            <column name="idraw" sql-type="int(11)"/>
        </id>
        <property name="number">
            <column name="number" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="hallByIdHall" class="DAL.Entities.HallEntity">
            <column name="idHall" not-null="true"/>
        </many-to-one>
        <set name="seatsByIdraw" inverse="true">
            <key>
                <column name="idRaw"/>
            </key>
            <one-to-many not-found="ignore" class="DAL.Entities.SeatEntity"/>
        </set>
    </class>
</hibernate-mapping>
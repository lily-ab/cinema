<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="DAL.Entities.HallEntity" table="hall" schema="cinemadb">
        <id name="idhall">
            <column name="idhall" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="description">
            <column name="description" sql-type="longtext" not-null="true"/>
        </property>
        <set name="rawsByIdhall" inverse="true">
            <key>
                <column name="idHall" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="DAL.Entities.RawEntity"/>
        </set>
        <set name="seancesByIdhall" inverse="true">
            <key>
                <column name="idHall"/>
            </key>
            <one-to-many not-found="ignore" class="DAL.Entities.SeanceEntity"/>
        </set>
    </class>
</hibernate-mapping>
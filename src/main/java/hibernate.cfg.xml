<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/cinemadb</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping resource="Entities/HallEntity.hbm.xml"/>
        <mapping class="Entities.HallEntity"/>
        <mapping resource="Entities/MovieEntity.hbm.xml"/>
        <mapping class="Entities.MovieEntity"/>
        <mapping resource="Entities/RawEntity.hbm.xml"/>
        <mapping class="Entities.RawEntity"/>
        <mapping resource="Entities/ReservationEntity.hbm.xml"/>
        <mapping class="Entities.ReservationEntity"/>
        <mapping resource="Entities/SeanceEntity.hbm.xml"/>
        <mapping class="Entities.SeanceEntity"/>
        <mapping resource="Entities/SeatEntity.hbm.xml"/>
        <mapping class="Entities.SeatEntity"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>
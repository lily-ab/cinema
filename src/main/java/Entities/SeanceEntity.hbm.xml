<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entities.SeanceEntity" table="seance" schema="cinemadb">
        <id name="idseance">
            <column name="idseance" sql-type="int(11)"/>
        </id>
        <property name="date">
            <column name="date" sql-type="date"/>
        </property>
        <property name="time">
            <column name="time" sql-type="time"/>
        </property>
        <many-to-one name="hallByIdHall" class="Entities.HallEntity">
            <column name="idHall"/>
        </many-to-one>
        <many-to-one name="movieByIdMovie" class="Entities.MovieEntity">
            <column name="idMovie"/>
        </many-to-one>
        <set name="reservationsByIdseance" inverse="true">
            <key>
                <column name="idSeance"/>
            </key>
            <one-to-many not-found="ignore" class="Entities.ReservationEntity"/>
        </set>
    </class>
</hibernate-mapping>